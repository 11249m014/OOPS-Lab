#include <iostream>
using namespace std;

class Rectangle {
private:
    int length;
    int breadth;

public:
    void setDimensions(int l, int b) {
        length = l;
        breadth = b;
    }

    void showDimensions() {
        cout << "Length = " << length << endl;
        cout << "Breadth = " << breadth << endl;
    }

    int calculateArea() {
        return length * breadth;
    }
};

int main() {
    Rectangle rect;
    rect.setDimensions(5, 3);
    rect.showDimensions();

    int area = rect.calculateArea();
    cout << "Area = " << area << endl;

    return 0;
}